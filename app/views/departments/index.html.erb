
<% content_for(:html_title) { 'Department - Index' } %>
<!-- START card -->
<div class="card card-transparent">
    <div class="card-header">
     <div class="pull-left">
       <%= link_to 'New Department', new_department_path, :class => 'btn btn-primary btn-cons' %>
     </div>
     <div class="pull-right">
       <div class="col-xs-12">
         <input type="text" id="search-table" class="form-control pull-right" placeholder="Search">
       </div>
     </div>
     <div class="clearfix"></div>
   </div>
   <div class="card-body">
     <table class="table table-hover demo-table-search table-responsive-block" id="tableWithSearch">
       <thead>
         <tr>
          <th>Department</th>
          <th>Def. Costcenter</th>
          <th>Def. Expense</th>
           <th>Action</th>
         </tr>
       </thead>
       <tbody>
        <% @departments.each do |department| %>
         <tr>
         
          <td class="v-align-middle semi-bold"><%= department.name %></td>
              <td class="v-align-middle">
              <%= department.costcenter.code + ' - ' + department.costcenter.name %></td>
              <td class="v-align-middle"><%= department.expense.code + ' - ' + department.expense.name %></td>

            
          <td class="v-align-middle"><%= link_to 'Show', department %> |
          <%= link_to 'Edit', edit_department_path(department) %> |
          <%= link_to 'Delete', department, method: :delete, data: { confirm: 'Are you sure to Delete Department ?'  } %></td>
          
         
         
         </tr>
          <% end %>
       </tbody>
     </table>
    
   </div>
</div>






