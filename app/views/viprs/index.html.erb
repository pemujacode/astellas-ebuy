

<% content_for(:html_title) { 'Payment Request - Index' } %>

<!-- START card -->
<div class="card card-transparent">
    <div class="card-header">
     <div class="pull-left">
       <%= link_to 'New Payment Request', new_vipr_path, :class => 'btn btn-primary btn-cons' %>
     </div>
     <div class="pull-right">
       <div class="col-xs-12">
         <input type="text" id="search-table" class="form-control pull-right" placeholder="Search">
       </div>
     </div>
     <div class="clearfix"></div>
   </div>
   <div class="card-body">
     
     <table class="table table-hover table-responsive-block" id="tableWithSearch">
       <thead>
         <tr>
          <th width='10%'>Pay No.</th>
          <th>Inv Date</th>
          <th>Status</th>
          <th>Inv No</th>
          <th>SAP No</th>
          
          <th>Requester</th>
          <th>Action</th>


         </tr>
       </thead>
       <tbody>
         <% @viprs.each do |vipr| %>
         <tr>
         
          <td class="v-align-middle semi-bold"><%= vipr.id %></td>
          <td class="v-align-middle"><%= vipr.invoice_date %></td>
          <td class="v-align-middle"><%= vipr.status %></td>
          <td class="v-align-middle"><%= vipr.invoice_no %></td>
          <td class="v-align-middle"><%= vipr.sapno %></td>
          
          <td class="v-align-middle"><%= vipr.requester %></td>
          
          



          <td class="v-align-middle"><%= link_to 'View', vipr %> 
            <% if current_user.email == vipr.req_email  %>
              | <%= link_to 'Edit/Process', edit_vipr_path(vipr) %> 

              <% if vipr.status == 'Draft' %>
             
              <% end %>

            <% end %>
             
          </td>
          

          
        
         
         </tr>
          <% end %>
       </tbody>
     </table>
    
   </div>
</div>



