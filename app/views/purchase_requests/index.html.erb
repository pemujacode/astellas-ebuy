

<% content_for(:html_title) { 'Purchase Request - Index' } %>

<!-- START card -->
<div class="card card-transparent">
    <div class="card-header">
     <div class="pull-left">
       <%= link_to 'New Purchase Request', new_purchase_request_path, :class => 'btn btn-primary btn-cons' %>
     </div>
     <div class="pull-right">
       <div class="col-xs-12">
         <input type="text" id="search-table" class="form-control pull-right" placeholder="Search">
       </div>
     </div>
     <div class="clearfix"></div>
   </div>
   <div class="card-body">
     
    
       <table class="table table-hover  table-responsive-block" id="tableWithSearch">
       <thead>
         <tr>
          <th width='10%'>PR No.</th>
          <th>Requester</th>
          <th>Request Date</th>
          <th>Department</th>
          <th>Remarks</th>
          <th>Status</th>
          <th>Action</th>

         </tr>
       </thead>
       <tbody>
         
         <% @purchase_requests.each do |purchase_request| %>
         <tr>
         
          <td class="v-align-middle semi-bold"><%= purchase_request.id %></td>
          <td class="v-align-middle"><%= purchase_request.requester %></td>
          <td class="v-align-middle"><%= purchase_request.request_date %></td>
          <td class="v-align-middle"><%= purchase_request.department %></td>
          <td class="v-align-middle"><%= purchase_request.item %></td>
          <td class="v-align-middle"><%= purchase_request.status %></td>
          
          

            
        
          <td class="v-align-middle"><%= link_to 'View', purchase_request %> 
            <% if current_user.email == purchase_request.req_email  %>
              | <%= link_to 'Edit/Process', edit_purchase_request_path(purchase_request) %> 

              <% if purchase_request.status == 'Draft' %>
             
              <% end %>

            <% end %>
             
          </td>
          
        
         
         </tr>
          <% end %>
       </tbody>
     </table>
    
   </div>
</div>


