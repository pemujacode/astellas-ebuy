<tr>
  <td>
    <%= f.input_field :_destroy, as: :hidden %>
    <%= link_to 'Del.', '#', class: 'remove_record' , data: { confirm: 'Are you sure to delete PR Item ?'  }  %>      
  </td>




  <td>
    <% if  @purchase_request.status.nil? %>

     <%=  f.select :dept,  
             options_for_select( @dept.collect{ |u| [u.name, u.name] }, params[:dept] ),
              { id: 'cbo_dept' , prompt: "..." } ,  :class => 'form-control' ,prompt: "...", disabled: (true unless @purchase_request.status.nil? )     
        %>


     <% else %>   

        <%= f.text_field :dept , class: 'form-control', label: false , disabled: (true unless @purchase_request.status.nil? ) %>   

        <% end %>   


   </td>
 
   <td>
	 <% if  @purchase_request.status.nil? %>
   		 <%= f.select :costcenter,  
           options_for_select(@costcenter.collect{ |u| [u.name, u.name] }, params[:dept] ),
            { id: 'cbo_cost' , prompt: "..." } ,  :class => 'form-control' , disabled: (true unless @purchase_request.status.nil? )     
      %>

      <% else %> 
    <%= f.text_field :costcenter , class: 'form-control', label: false , disabled: (true unless @purchase_request.status.nil? ) %>   
    

    <% end %>     

   </td>

    <td>
    <% if @purchase_request.status.nil? %>
      <%=  f.select :product,  
           options_for_select(@product.collect{ |u| [u.name, u.name] },  params[:product]),
           { id: 'cbo_product' , prompt: "..." } ,  class: 'form-control',disabled: (true unless @purchase_request.status.nil?  )     
      %>

    <% else %> 

      <%= f.text_field :product , class: 'form-control', label: false , disabled: (true unless @purchase_request.status.nil? ) %>   
    


    <% end %>    
     
   </td>





  <td><%= f.text_field :description, id: 'description' , class: 'autonumeric form-control' , label: false , disabled: (true unless @purchase_request.status.nil? ) %></td>




  <td><%= f.text_field :quantity,:value => number_to_currency(f.object.quantity, unit: "", precision: 0), id: 'txt_quantity' ,  class: 'form-control' , label: false, disabled: (true unless @purchase_request.status.nil? ) %></td>

  <td><%=f.input :no, :input_html => { :value => @purchase_request.no } ,class: 'form-control', label: false ,as: :hidden %></td>
    
  
</tr>





