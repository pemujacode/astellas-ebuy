
<% content_for(:html_title) { 'Supplier - Index' } %>

<!-- START card -->
<div class="card card-transparent">
    <div class="card-header">
     <div class="pull-left">
       <%= link_to 'New Supplier', new_supplier_path, :class => 'btn btn-primary btn-cons' %>
     </div>
     <div class="pull-right">
       <div class="col-xs-12">
         <input type="text" id="search-table" class="form-control pull-right" placeholder="Search">
       </div>
     </div>
     <div class="clearfix"></div>
   </div>
   <div class="card-body">
     
     <table class="table table-hover demo-table-search table-responsive-block " id="tableWithSearch">
       <thead>
         <tr>
          <th>Code</th>
          <th>Name</th>
          <th>Phone</th>
          <th>Pic</th>
          <th>Action</th>
         </tr>
       </thead>
       <tbody>
        <% @suppliers.each do |supplier| %>
         <tr>
         
          <td class="v-align-middle semi-bold"><%= supplier.code %></td>
          <td class="v-align-middle"><%= supplier.name  %></td>
          <td class="v-align-middle"><%= supplier.phone  %></td>
          <td class="v-align-middle"><%= supplier.pic  %></td>

          <td class="v-align-middle"><%= link_to 'Show', supplier %> |
          <%= link_to 'Edit', edit_supplier_path(supplier) %> |
          <%= link_to 'Delete', supplier, method: :delete, data: { confirm: 'Are you sure to Delete Supplier ?'  } %></td>
          
         
         
         </tr>
          <% end %>
       </tbody>
     </table>
    
   </div>
</div>






