<div class="card-body">

 <% if user.errors.any? %>
        <% user.errors.full_messages.each do |message| %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <button class="close" data-dismiss="alert"></button>
                <strong>Error: </strong><%=  message %>
              </div>
        <% end %>
  <% end %>

  <%= simple_form_for @user,:html=> { role: 'form',class: 'form-horizontal' }  do |f| %>
 

  <div class="form-group row">
    <label for="fname" class="col-md-3 control-label">E-mail</label>
    <div class="col-md-9">
      <%= f.text_field :email , class: 'form-control', placeholder: 'E-mail',  :disabled =>true %>
    </div>
  </div>

 
  <div class="form-group row">
    <label for="fname" class="col-md-3 control-label">Name</label>
    <div class="col-md-9">
      <%= f.text_field :name , class: 'form-control' %>
    </div>
  </div>



  <div class="form-group row">
    <label for="fname" class="col-md-3 control-label">Employee ID</label>
    <div class="col-md-9">
      <%= f.text_field :emp_id , class: 'form-control' %>
    </div>
  </div>


   <div class="form-group row">
      <label for="fname" class="col-md-3 control-label">Job Title</label>
      <div class="col-md-9">
        <%= f.text_field :title, value:@user.title , class: 'form-control'  %>
      </div>
    </div>

    
    <div class="form-group row">
    <label class="col-md-3 control-label">Department</label>
    <div class="col-md-9">
      <select class="full-width" data-init-plugin="select2" placeholder = "Department" name="user[department_id]" id="user_department_id">
        <% @departments = Department.all
          @departments.each do |department| %>
          <option value="<%= department.id %>"><%= department.name %></option>
          <% end %>

           <% unless user.department_id.nil? %>

            <option selected="selected" value="<%= user.department.id %>" ><%=  user.department.name %></option>
       
           <% end %>
 
      </select>
    </div>
  </div>

  <div class="form-group row">
      <label for="fname" class="col-md-3 control-label">Password</label>
      <div class="col-md-9">
        <%= f.password_field :password , class: 'form-control'  %>
      </div>
    </div>

    <div class="form-group row">
      <label for="fname" class="col-md-3 control-label">Password Confirmation</label>
      <div class="col-md-9">
        <%= f.password_field :password_confirmation , class: 'form-control'  %>
      </div>
    </div>







    <div class="form-group row">
      <label for="fname" class="col-md-3 control-label">Active</label>
      <div class="col-md-9">
        <%= f.check_box :is_active, value:@user.is_active , :id =>'checkbox1' %>
      </div>
    </div>






  <br>
  <div class="actions">
       <%= f.submit 'Save' , :class => 'btn btn-primary btn-cons'  %>
       <%= link_to 'Show', @user, :class => 'btn btn-complete btn-cons' %> 

     </div>
  
  <br>

</form>
 

     <% end %>  



</div>