<h4>Change your password</h4>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

<%= f.error_notification %>
  <div class="form-group form-group-default">
   <label>New Password</label>
    <div class="controls">
     <%= f.password_field :password,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }, :class =>'form-control', :placeholder => 'New Password'   %>
    </div>
  </div>

  <div class="form-group form-group-default">
    <label>Password Confirmation</label>
    <div class="controls">
     <%= f.password_field :password_confirmation,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }, :class =>'form-control', :placeholder => 'Confirm your new password'   %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change my password", :class => 'class="btn btn-primary btn-cons m-t-10"'  %>
  </div>
<% end %>

