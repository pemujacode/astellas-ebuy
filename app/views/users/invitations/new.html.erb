
<% content_for(:html_title) { 'User Invitation' } %>


<div class="card card-default">
    <div class="card-header">
    
     <div class="clearfix"></div>
   </div>



  
  <div class="card-body">

   <%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post, role: 'form',class: 'form-horizontal' }) do |f| %>

    <div class="form-group row">
      <label for="fname" class="col-md-3 control-label">Email</label>
      <div class="col-md-9">
       <%= f.input :email,label: false, input_html: { class: "form-control" }, error_html: { id: 'password_error'} %>
      </div>
    </div>

      <br>
   <div class="row">
            <div class="col-md-9">
              <div class="form-actions">
                  <%= f.submit  "Invite User",  :class => 'btn btn-success' %>
                    <%= link_to 'Home', root_path , :class => 'btn btn-complete btn-cons' %>

            </div>  
           
            </div>
    </div>
    

    <br>
   <% end %>  

 



  </div>
</div>

