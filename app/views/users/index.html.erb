
<% content_for(:html_title) { 'User - Administration' } %>

<!-- START card -->
<div class="card card-transparent">
    <div class="card-header">
     <div class="pull-left">
       <%= link_to 'Invite New User', new_user_invitation_path, :class => 'btn btn-primary btn-cons' %>
     </div>
     <div class="pull-right">
       <div class="col-xs-12">
         <input type="text" id="search-table" class="form-control pull-right" placeholder="Search">
       </div>
     </div>
     <div class="clearfix"></div>
   </div>
   <div class="card-body">
     
     <table class="table table-hover demo-table-search table-responsive-block" id="tableWithSearch">
       <thead>
         <tr>
          <th>Email</th>
          <th>Name</th>
          <th>Role</th>
          <th>Department</th>
          <th>Active</th>
          <th>Action</th>

         </tr>
       </thead>
       <tbody>
       
        <% @user.each do |user| %>
         <tr>
         
          <td class="v-align-middle semi-bold"><%= user.email %></td>
          <td class="v-align-middle"><%= user.name  %></td>
          <td class="v-align-middle"><%= user.role %></td>
		  <td class="v-align-middle"><%= Department.find_by(id: user.department_id).name %></td>
          <td class="v-align-middle"><%= user.is_active %></td>


          <td class="v-align-middle"><%= link_to 'Show', user %> | 
          <%= link_to 'Edit', edit_user_path(user) %> 

        
          </td>
          
         
         
         </tr>
          <% end %>

       </tbody>
     </table> 
   </div>

</div>








