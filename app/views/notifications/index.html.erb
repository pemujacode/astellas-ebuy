

 <% content_for(:html_title) { 'Notification - Index' } %>

<!-- START card -->
<div class="card card-transparent">
    <div class="card-header">
     <div class="pull-left">
       <%= link_to 'New Notification', new_notification_path, :class => 'btn btn-primary btn-cons' %>
     </div>
     <div class="pull-right">
       <div class="col-xs-12">
         <input type="text" id="search-table" class="form-control pull-right" placeholder="Search">
       </div>
     </div>
     <div class="clearfix"></div>
   </div>
   <div class="card-body">
     
     <table class="table table-hover demo-table-search table-responsive-block" id="tableWithSearch">
       <thead>
         <tr>
          <th>Doc Type</th>
          <th>Doc Num</th>
           <th>Action</th>
         </tr>
       </thead>
       <tbody>
        <% @notifications.each do |notification| %>
         <tr>
         
          <td class="v-align-middle semi-bold"><%= notification.doc_type %></td>
          <td class="v-align-middle"><%= notification.doc_num %></td>
        
          <td class="v-align-middle"><%= link_to 'Show', notification %> |
          <%= link_to 'Edit', edit_notification_path(notification) %> 
         
         
         </tr>
          <% end %>
       </tbody>
     </table>
    
   </div>
</div>







